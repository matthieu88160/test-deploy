{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} homepage{% endblock %}

{% block body %}

	{{ '<script>alert("hello")</script>hello'|toBold }}

	<form>
        <div class="form-group row">
            <label for="brandSearch" class="col-sm-2 col-form-label">Search for a brand</label>
            <div class="col-sm-10 row">
            	<input type="text" class="form-control col-sm-9" id="brandSearch">
    			<button class="btn btn-outline-success col-sm-2" type="button" id="brandSearchButton">Search</button>
            </div>
        </div>
	</form>
	
	<ul id="searchResults">
	</ul>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="/js/searchBrandClass.js"></script>
	<script type="text/javascript">
    	let client = new Client(
    		document.getElementById('brandSearchButton'),
    		document.getElementById('brandSearch'),
    		document.getElementById('searchResults')
    	);
    	client.start();
	</script>
{% endblock %}













